<resources>
    <!-- styles.xml for layout styles -->
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/holo_blue_dark</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">@android:color/holo_blue_dark</item>
        <item name="tabTextColor">@android:color/darker_gray</item>
        <item name="tabInlineLabel">true</item>
    </style>

    <style name="DarkBubbleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/offwhite</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#808080</item>
        <item name="colorControlActivated">#FFDF00</item>
    </style>

    <style name="BoneRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bone</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">72dp</item>
    </style>

</resources>